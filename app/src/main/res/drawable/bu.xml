<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        
        <shape>
            
            <solid
                android:color="#c0008000" />
            
            <stroke
                android:width="0dp"
                android:color="#bb6008"
                 />
            <corners
                android:radius="10dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#c0009900" />
            <stroke
                android:width="0dp"
                android:color="#000000ff" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>